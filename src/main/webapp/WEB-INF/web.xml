<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <display-name>Gesti√≥n de ligas</display-name>
  <context-param>
    <description>Proyecto final TAD</description>
    <param-name>productionMode</param-name>
    <param-value>false</param-value>
  </context-param>
   
    <servlet>
    <servlet-name>PrincipalServlet</servlet-name>
    <servlet-class>tad.proyecto.madrigalgutierrezpedroantonio.Principal</servlet-class>
    <init-param>
      <description>PrincipalServlet</description>
      <param-name>PrincipalServlet</param-name>
      <param-value>PrincipalServlet</param-value>
    </init-param>
   </servlet> 
   
   <servlet>
    <servlet-name>RegistroServlet</servlet-name>
    <servlet-class>tad.proyecto.madrigalgutierrezpedroantonio.Registro</servlet-class>
    <init-param>
      <description>RegistroServlet</description>
      <param-name>RegistroServlet</param-name>
      <param-value>RegistroServlet</param-value>
    </init-param>
   </servlet>
   
  <servlet-mapping>
    <servlet-name>PrincipalServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RegistroServlet</servlet-name>
    <url-pattern>/Registro/*</url-pattern>
  </servlet-mapping>

</web-app>
